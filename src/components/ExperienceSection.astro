---
import Section from '@components/Section.astro'
import { Icon } from 'astro-icon/components'
---

<Section title="Experience">
  <ol slot="content" x-data="{hoveringSection: false}" class="relative border-s border-red-800">                  

      <li x-data="{hoveringItem: false}"  class="mb-10 ms-4 group"  >
        <div class="absolute transition-all duration-300 size-3 bg-red-800 rounded-full mt-1.5 -start-1.5 border border-red-800"></div>
        <div class="group-hover:translate-x-2 transition-[transform,opacity] duration-300" @mouseover="hoveringItem = true; hoveringSection = true" @mouseleave="hoveringSection = false; hoveringItem = false" :class="!hoveringItem && hoveringSection ? 'opacity-40': 'opacity-100'">
          <a href="#">
              <div class="flex flex-col gap-0.5">
                <div class="flex flex-wrap gap-1 items-center">
                  <span class="text-lg font-proximaNova leading-tight font-semibold text-gray-800 group-hover:text-red-800">Fullstack Developer</span> 
                  <span class="font-proximaNova leading-tight font-semibold text-lg text-gray-600 group-hover:text-red-800 text-wrap px-0.5">·</span>
                  <span class="font-proximaNova leading-tight font-semibold text-lg text-gray-800 group-hover:text-red-800 text-wrap">Tech</span>
                  <span class="font-proximaNova leading-tight font-semibold text-lg text-gray-800 group-hover:text-red-800 text-wrap">Company
                    <Icon name="tabler:link" class="text-gray-800 size-5 inline-block group-hover:text-red-800" />
                  </span>
                </div>
                <time class="flex text-sm font-proximaNova text-gray-600">February 2022 - Actual</time>
              </div>

              <div class="flex flex-col gap-4 mt-4">
