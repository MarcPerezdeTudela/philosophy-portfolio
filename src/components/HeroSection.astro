---
import ParthenonSVG from '@assets/greek-parthenon.svg'
import WorldIcon from '@icons/WorldIcon.astro'
import GithubIcon from '@icons/GithubIcon.astro'
import LinkedInIcon from '@icons/LinkedInIcon.astro'
import MailIcon from '@icons/MailIcon.astro'
---

<section class="flex flex-col gap-4 max-w-prose">
  <div class="flex justify-center items-center size-24 p-6 bg-red-800 rounded-full">
    <img src={ParthenonSVG.src} alt="Parthenon icon" />
  </div>
  <div class="flex flex-col gap-2">
    <h1 class="font-roman text-gray-800 text-3xl">Jhon Doe</h1>
    <h2 class="font-proximaNova text-xl text-red-800 ">Fullstack Developer. <span class="text-gray-800">Passionate about philosophy and programming. +2 years of experience as profesional developer.</span></h2>
    <div class="flex gap-2 text-gray-600 items-center">
      <WorldIcon/>
      <span class="font-proximaNova text-md whitespace-nowrap">Barcelona, Spain</span>
    </div>
    <div class="flex gap-2 items-center">
      <div class="border border-gray-300 rounded-md p-1">
        <GithubIcon/>
      </div>
      <div class="border border-gray-300 rounded-md p-1">
        <LinkedInIcon/>
      </div>
      <div class="border border-gray-300 rounded-md p-1">
        <MailIcon/>
      </div>
  </div>
</section>
